<form class="form-horizontal">
	<div class="form-group">
		<label class="control-label col-xs-3" for="change_total">{$lang['sales_total']}({$config['currency_symbol']})</label>			<div class="col-xs-6">
			<input class="form-control" id="change_total" type="text" value="{nocache}{$sale['ttotal']}{/nocache}" readonly>
		</div>
	</div>
	
	<div class="form-group">
		<label class="control-label col-xs-3" for="change_payment">{$lang['sales_payment']}({$config['currency_symbol']})</label>			<div class="col-xs-6">
			<input class="form-control" id="change_payment" type="text" value="{nocache}{$sale['payment']}{/nocache}" readonly>
		</div>
	</div>
	
	<div class="form-group">
		<label class="control-label col-xs-3" for="change">{$lang['sales_change']}({$config['currency_symbol']})</label>			<div class="col-xs-6">
			<input class="form-control autofocus" id="change" type="text" value="{nocache}{$sale['payment'] - $sale['ttotal']}{/nocache}" readonly>
		</div>
	</div>
</form>
<script type="text/javascript">
	//validation and submit handling
$(document).ready(function() {
	$('#change_total').val($.number($('#change_total').val(), {$config['currency_decimals']}, "{$config['decimal_point']}", "{$config['thousands_separator']}"));
	$('#change_payment').val($.number($('#change_payment').val(), {$config['currency_decimals']}, "{$config['decimal_point']}", "{$config['thousands_separator']}"));
	$('#change').val($.number($('#change').val(), {$config['currency_decimals']}, "{$config['decimal_point']}", "{$config['thousands_separator']}"));
	
	$('.modal').on('shown.bs.modal', function() {
	  $(this).find('input.autofocus').focus();
	});
});
</script>